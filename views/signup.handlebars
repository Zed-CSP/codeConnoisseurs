<div class="vh-100 bg-image2">
  <header class="d-flex justify-content-center align-items-center py-2">
    <img src="../images/logo.png" alt="Drawing of carrot character with chef's hat and spoon">
    <h1 id="title">Kitchen Alchemy</h1>
  </header>

  <main class="d-flex justify-content-center">
    <div id="signup-box" class="green-box">
      <h1 class="text-center">Create your account</h1>
      <form id="signup-form">
        <div class="d-sm-flex">
          <input class="form-control" id="firstName" type="text" name="firstName" placeholder="First name" required>
          <input class="form-control" id="lastName" type="text" name="lastName" placeholder="Last name" required>
        </div>
        <input class="form-control" id="email" type="text" name="email" placeholder="Email address" required>
        <input class="form-control" id="password" type="password" name="password" placeholder="Password" minlength="8" required>
        <label for="password">Password must be at least 8 characters</label>
        <div class="text-center">
          <button id="submit" class="mt-3">Submit</button>
        </div>
      </form>
    </div>
  <main>
</div>

<script src="/js/signup.js"></script>