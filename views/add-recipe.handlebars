<h1>Add New Recipe</h1>

<form id="add-recipe-form">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" placeholder="Name" required/>
    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="3" placeholder="Enter the description here" required></textarea>
    <fieldset id="ingredient-data1">
        <label for="ingredient1">Ingredient:</label>
        <select name="ingredient1" id="ingredient1">
            {{#each ingredients as |ingredient|}}
                <option value="{{ingredient.name}}">{{ingredient.name}}</option>
            {{/each}}
        </select>
        <label for="quantity1">Quantity:</label>
        <input id="quantity1" type="text" name="quantity1" placeholder="Quantity" required/>
        <label for="unit1">Unit:</label>
        <input id="unit1" type="text" name="unit1" placeholder="Unit" required/>
    </fieldset>
    <button id="add-btn">+</button>
    <label for="instructions">Instructions:</label>
    <textarea id="instructions" name="instructions" rows="10" placeholder="Enter instructions here" required></textarea>
    <button id="submit-btn">Submit Recipe</button>
</form>