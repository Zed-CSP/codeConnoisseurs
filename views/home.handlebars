<header>{{!--header or div in nested handlebars?--}}
    <h1>Welcome {{session.user.first_name}}</h1>
</header>
    <section class="feed">
    {{#each recipes as |recipe|}}
        <div class="post-card green-box m-5" id="{{recipe.id}}">
            <h2>{{recipe.name}}</h2>
            <p class="description">{{recipe.description}}</p>
            <p class="author">By: {{recipe.user.first_name}} {{recipe.user.last_name}}</p>
        </div>
    {{/each}}
    </section>

<script src="/js/home.js"></script>